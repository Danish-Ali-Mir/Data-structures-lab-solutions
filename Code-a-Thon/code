#include <iostream>
#include <string>
using namespace std;

struct Node {
    string name;
    int id;
    Node* next;
    
    Node(string n, int i) {
        name = n;
        id = i;
        next = nullptr;
    }
};

class TShirtQueue {
private:
    Node* front;
    Node* rear;
    int count;

public:
    TShirtQueue() {
        front = rear = nullptr;
        count = 0;
    }

    void addStudent() {
        string name;
        int id;
        cout << "\nEnter Student Name: ";
        cin.ignore();
        getline(cin, name);
        cout << "Enter Student ID: ";
        cin >> id;

        Node* newNode = new Node(name, id);

        if (rear == nullptr) {
            front = rear = newNode;
        } else {
            rear->next = newNode;
            rear = newNode;
        }

        count++;
        cout << name << " has joined the queue.\n";
    }

    void serveStudent() {
        if (front == nullptr) {
            cout << "\nNo students in the queue.\n";
            return;
        }

        Node* temp = front;
        cout << "\nServing Student: " << temp->name << " (ID: " << temp->id << ")\n";
        front = front->next;

        if (front == nullptr)
            rear = nullptr; 

        delete temp;
        count--;
    }

    void studentLeaves() {
        if (front == nullptr) {
            cout << "\nQueue is empty.\n";
            return;
        }

        int id;
        cout << "\nEnter Student ID to remove: ";
        cin >> id;

        Node* curr = front;
        Node* prev = nullptr;

        while (curr != nullptr && curr->id != id) {
            prev = curr;
            curr = curr->next;
        }

        if (curr == nullptr) {
            cout << "No student found with ID " << id << ".\n";
            return;
        }

        if (curr == front) {
            front = front->next;
        } else {
            prev->next = curr->next;
        }

        if (curr == rear) {
            rear = prev;
        }

        cout << curr->name << " (ID: " << curr->id << ") has left the queue.\n";
        delete curr;
        count--;
    }

    void displayQueue() {
        if (front == nullptr) {
            cout << "\nQueue is empty.\n";
            return;
        }

        cout << "\nCurrent Queue:\n";
        cout << "-------------------------\n";
        Node* temp = front;
        while (temp != nullptr) {
            cout << "Name: " << temp->name << " | ID: " << temp->id << endl;
            temp = temp->next;
        }
        cout << "-------------------------\n";
    }

    void countStudents() {
        cout << "\nTotal students in queue: " << count << endl;
    }

    ~TShirtQueue() {
        Node* temp;
        while (front != nullptr) {
            temp = front;
            front = front->next;
            delete temp;
        }
    }
};

int main() {
    TShirtQueue queue;
    int choice;

    do {
        cout << "\n====== Code-a-Thon T-Shirt Queue ======\n";
        cout << "1. Add Student\n";
        cout << "2. Serve Student\n";
        cout << "3. Student Leaves Queue\n";
        cout << "4. Display Queue\n";
        cout << "5. Count Students\n";
        cout << "6. Exit\n";
        cout << "Choose an option: ";
        cin >> choice;

        switch (choice) {
            case 1: queue.addStudent(); break;
            case 2: queue.serveStudent(); break;
            case 3: queue.studentLeaves(); break;
            case 4: queue.displayQueue(); break;
            case 5: queue.countStudents(); break;
            case 6: cout << "Exiting... Goodbye!\n"; break;
            default: cout << "Invalid choice! Please try again.\n";
        }
    } while (choice != 6);

    return 0;
}
